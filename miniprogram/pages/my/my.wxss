.page-container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.user-section{
  padding: 50rpx;
  display: flex;
  margin-bottom: 20px;
  background-color: #ffffff;
}
.user-avatarUrl{
  width: 50px;
  height: 50px;
  border-radius: 15%;
  background-color: black;
}
.user-info{
  margin-left: 30px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.user-info-nickName{
  font-size: 18px;
  font-family: monospace;
}
.user-info-account{
  font-size: 14px;
  color: darkgrey;
}

.navigator-section{
  background-color: #ffffff;
  padding: 10px 0 10px 0;
}
.navigator-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx 0 50rpx;
  line-height: 50px;
}
.navigator-item-icon{
  width: 30px;
  height: 30px;
}
.navigator-item-bd{
  flex: 1;
  margin: 0 10px 0 10px;
  font-size: 18px;
  font-family: monospace;
  border-bottom: 1px solid #F6F6F6;
}

.navigator-item-ft{
  position: relative;
}
.navigator-item-ft:before{
  content:" ";
  display:inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style:solid;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  margin-top: -4px;
}

.login-section{
  position: fixed;
  width: 80%;
  bottom: 25%;
  left: 25%;
  transform: translate(-20%);
}
.login-button{
  font-family: monospace;
  font-weight: 600;
  background-color: rgb(81, 127, 196);
  color: #ffffff;
}