.topic-item{
  display: flex;
  padding: 20px;
  background-color: #ffffff;
  border-bottom: 1px solid #F6F6F6;
}

.topic-hd{
  width: 100%;
}

.topic-avatar{
  width: 45px;
  height: 45px;
  margin-right: 20px;
}
.topic-name{
  font-size: 18px;
  font-family: monospace;
  font-weight: 600;
  color: rgb(8, 128, 184);
}
.topic-content{
  font-size: 18px;
  font-family: monospace;
  margin: 5px 0;
}

.topics-resource{
  margin-bottom: 5px;
}
.topic-resource_imageUrl{
  width: 200px;
  height: 200px;
}
.topic-resource_videoUrl{
  width: 200px;
  height: 200px;
}

.topic-info{
  display: flex;
  justify-content: space-between;
  padding-top: 10px;
  font-size: 12px;
  color: rgb(148, 144, 144);
}
.resource-video-controls{
  width: 100%;
  height: 100%;
}